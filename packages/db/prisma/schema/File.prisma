// A model that replicates the state of the object storage.
model File {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
  key  String  @unique
  size Int
  type String
  alt  String?

  employees   Employee[]
  goodsGroups GoodsGroupMedia[]
  goods       GoodMedia[]
  imports     Import[]
  exports     Export[]

  @@index([id])
  @@index([key])
}

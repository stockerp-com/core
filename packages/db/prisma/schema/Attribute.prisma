// Something that defines a variant of a goods group.
// It can be a color, a size, a material, etc.
model Attribute {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  groups        AttributeGroup[]
  localizations AttributeLocalization[]
  values        AttributeValue[]
  goods         GoodAttributes[]

  @@index([id])
}

model AttributeLocalization {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String

  attribute Attribute @relation(fields: [attributeId], references: [id], onDelete: Cascade)
  language  Language  @relation(fields: [languageName], references: [name], onDelete: Cascade)

  attributeId  Int
  languageName String

  @@id([attributeId, languageName])
  @@index([attributeId, languageName])
  @@index([attributeId])
  @@index([languageName])
}

// Value of the attribute.
model AttributeValue {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  localizations AttributeValueLocalization[]
  attribute     Attribute?                   @relation(fields: [attributeId], references: [id])

  attributeId     Int?
  goodsAttributes GoodAttributes[]

  @@index([id])
  @@index([attributeId])
}

model AttributeValueLocalization {
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  data String

  value    AttributeValue @relation(fields: [valueId], references: [id], onDelete: Cascade)
  language Language       @relation(fields: [languageName], references: [name], onDelete: Cascade)

  valueId      Int
  languageName String

  @@id([valueId, languageName])
  @@index([valueId, languageName])
  @@index([valueId])
  @@index([languageName])
}
